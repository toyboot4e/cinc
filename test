#!/usr/bin/env bash

cd "$(dirname "$0")"

MAIN_OBJ='./cinc'
ROOT="$(pwd)"
DOCK="docker run --rm -v ${ROOT}:/cinc -w /cinc compilerbook"

# TODO: rm Docker one liners (each takes > 0.5 s)

assert() {
  expected="$1"
  input="$2"

  $DOCK "$MAIN_OBJ" "$input" > tmp.s
  status="$?"
  if [ $status -ne 0 ] ; then
      echo "Failed to compile \`$input\` with error code \`$status\`";
      exit 1
  fi

  $DOCK cc tmp.s -o tmp
  $DOCK ./tmp
  actual="$?"

  if [ "$actual" = "$expected" ]; then
    echo "ok: \`$input\` => $actual"
  else
    echo "err: \`$input\` => $expected expected, but got $actual"
    exit 1
  fi
}

assert 0 0
assert 42 42

# addition and substraction
assert 21 "5+20-4"

# whitespaces (tokenizer)
assert 41 " 12 + 34 - 5 "

# multiplication and division
assert 47 '5+6*7'
assert 15 '5*(9-6)'
assert 4 '(3+5)/2'

echo 'all tests passed'

