#!/usr/bin/env bash

cd "$(dirname "$0")"

main_obj='./cinc'
dock='docker run --rm -v "$(pwd):/cinc" -w /cinc compilerbook'

assert() {
  expected="$1"
  input="$2"

  "$dock" "$main_obj" "$input" > tmp.s
  "$dock" cc tmp.s -o tmp
  "$dock" ./tmp
  actual="$?"

  if [ "$actual" = "$expected" ]; then
    echo "ok: $input => $actual"
  else
    echo "err: $input => $expected expected, but got $actual"
    exit 1
  fi
}

assert 0 0
assert 42 42

echo 'OK: all tests passed'

